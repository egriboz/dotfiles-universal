alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

if [[ `uname` == "Linux" ]]; then
    alias ls='ls -h --color --group-directories-first'
fi

alias grep="grep -i --color=auto"
alias fgrep="fgrep -i -n -r --color=auto"
alias less="less -r"
alias more="more -r"
alias rm="rm -i"

alias what_is_my_public_ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias what_is_my_real_ip="curl ifconfig.co"